<Page x:Class="ProductShop.Pages.AuthorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="EnterButt" Click="Button_Click" Foreground="White" Background="Green" >Войти</Button>
            <TextBlock>Введите пароль</TextBlock>
            <PasswordBox x:Name="PassBx"></PasswordBox>
        </StackPanel>
    </Grid>
</Page>
